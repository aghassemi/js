{
  "name": "WSPR",
  "description": "The Veyron Web Socket Proxy",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "page": "index.html",
      "persistent": true // TODO(bprosnitz) Chrome docs recommend this to be false. Look into if it should change.
    }
  },
  "sockets": {
    "udp": {
      "send": ["*"],
      "bind": ["*"]
    },
    "tcp" : {
      "connect": ["*"]
    },
    "tcpServer" : {
      "listen": ["*"]
    }
  },
  "permissions": [
    "alarms" // Needed to keep the extension from being killed.
  ]
}
